{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@controllers": ["src/controllers"],
      "@middlewares": ["src/middlewares"],
      "@services": ["src/services"],
      "@static": ["src/static"],
      "@models": ["src/models"],
      "@interfaces": ["src/interfaces"]
    }
  }
}
